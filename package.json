{
  "name": "@carolinappowers/vue-tdd-automation",
  "version": "0.1.1",
  "description": "Automated TDD workflow for Vue.js applications with Vitest and Testing Library",
  "main": "dist/lib/cli/init.js",
  "type": "module",
  "exports": {
    ".": "./dist/lib/cli/init.js",
    "./shared/test-generator": "./dist/lib/shared/test-generator/index.js",
    "./shared/test-generator/validator": "./dist/lib/shared/test-generator/validator.js",
    "./shared/test-generator/types": "./dist/lib/shared/test-generator/types.js"
  },
  "bin": {
    "vue-tdd": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc && node dist/scripts/post-build.js",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build || true && husky || true",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "dev:create-test-project": "scripts/dev/create-test-project.sh"
  },
  "keywords": [
    "vue",
    "tdd",
    "test-driven-development",
    "vitest",
    "testing-library",
    "automation",
    "workflow",
    "github-actions"
  ],
  "author": "Carolina Powers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carolinapowers/vue-tdd-automation.git"
  },
  "bugs": {
    "url": "https://github.com/carolinapowers/vue-tdd-automation/issues"
  },
  "homepage": "https://github.com/carolinapowers/vue-tdd-automation#readme",
  "files": [
    "dist/bin/**/*.js",
    "dist/bin/**/*.d.ts",
    "dist/lib/**/*.js",
    "dist/lib/**/*.d.ts",
    "dist/templates",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "vitest": "^2.0.0 || ^3.0.0",
    "vue": "^3.4.0"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "semantic-release": "^24.2.9",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4",
    "vue": "^3.4.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix"
    ],
    "*.ts": [
      "vitest related --run --reporter=verbose"
    ]
  }
}
