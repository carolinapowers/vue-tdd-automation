{
    "name": "@vue-tdd/automation",
    "version": "0.1.0",
    "description": "Automated TDD workflow for Vue.js applications with Vitest and Testing Library",
    "main": "dist/lib/init.js",
    "type": "module",
    "bin": {
        "vue-tdd": "./dist/bin/cli.js"
    },
    "scripts": {
        "build": "tsc",
        "prepublishOnly": "npm run build",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage"
    },
    "keywords": [
        "vue",
        "tdd",
        "test-driven-development",
        "vitest",
        "testing-library",
        "automation",
        "workflow",
        "github-actions"
    ],
    "author": "Carolina Powers",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/carolinapowers/vue-tdd-automation.git"
    },
    "bugs": {
        "url": "https://github.com/carolinapowers/vue-tdd-automation/issues"
    },
    "homepage": "https://github.com/carolinapowers/vue-tdd-automation#readme",
    "files": [
        "dist/bin",
        "dist/lib",
        "templates",
        "README.md",
        "LICENSE"
    ],
    "engines": {
        "node": ">=18.0.0"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "peerDependencies": {
        "vitest": "^2.0.0 || ^3.0.0",
        "vue": "^3.4.0"
    },
    "dependencies": {
        "chalk": "^5.6.2",
        "commander": "^12.1.0"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "typescript": "^5.5.0",
        "vitest": "^3.2.4",
        "vue": "^3.4.0"
    }
}
